datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  customers   Customer[]  @relation("CustomerCreatedBy")
  quotations  Quotation[] @relation("QuotationCreatedBy")
}

model Customer {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  createdAt  DateTime  @default(now())
  createdBy  User      @relation(fields: [createdById], references: [id], name: "CustomerCreatedBy")
  createdById Int
  projects   Project[]
}

model Project {
  id            Int       @id @default(autoincrement())
  projectNumber String
  customer      Customer  @relation(fields: [customerId], references: [id])
  customerId    Int
  quotations    Quotation[]
}

model Quotation {
  id              Int       @id @default(autoincrement())
  quotationNumber String
  createdAt       DateTime  @default(now())
  createdBy       User      @relation(fields: [createdById], references: [id], name: "QuotationCreatedBy")
  createdById     Int
  project         Project   @relation(fields: [projectId], references: [id])
  projectId       Int
}
